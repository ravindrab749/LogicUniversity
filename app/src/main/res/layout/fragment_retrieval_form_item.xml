<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:maxHeight="100dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:contentDescription="@string/img_content_desc"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/iv_edit"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_order_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_below="@id/tv_item_name"
            android:id="@+id/lin_lay_items"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/iv_info"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>

        <ImageView
            android:contentDescription="@string/img_content_desc"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/iv_info"
            android:layout_below="@id/iv_edit"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_order_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_actual_req_items"
            android:layout_below="@id/iv_info"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>