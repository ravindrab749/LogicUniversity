<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:elevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/employee_name"
            android:layout_below="@id/order_id"
            android:drawableStart="@drawable/ic_item_person"
            android:textColor="@color/colorGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItemSecondary" />

        <TextView
            android:id="@+id/rep_name"
            android:layout_below="@id/employee_name"
            android:drawableStart="@drawable/ic_item_rep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:textAppearance="?attr/textAppearanceListItemSecondary" />

        <TextView
            android:id="@+id/collection_point"
            android:layout_below="@id/rep_name"
            android:drawableStart="@drawable/ic_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:textAppearance="?attr/textAppearanceListItemSecondary" />

        <ImageView
            android:contentDescription="@string/img_content_desc"
            android:id="@+id/id_app_rej"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>